const Book = (props) => {
    console.log(props);
    const { img, title, author,children} = props
    return (
        <article className='book'>
            
            <img src={img} alt={title} />
            <h2>{title}</h2>
            <h4>{author.toUpperCase()}</h4>
            {children}
    
        </article>
    )
}

